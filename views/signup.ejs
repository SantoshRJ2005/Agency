<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Your Agency</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ff6b4a;
            --primary-color-dark: #e65c40; /* Added for hover */
            --secondary-color: #2c3e50;
            --bg-light: #f7f8fc; /* Slightly refined gray */
            --text-dark: #333;
            --text-light: #667; /* For subtitles */
            --white: #ffffff;
            --border-color: #dfe6f0;
            --success: #28a745;
            --danger: #dc3545;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-light);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }
        .container {
            display: flex;
            background-color: var(--white);
            border-radius: 15px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.08); /* Softened shadow */
            max-width: 1200px;
            width: 100%;
            min-height: 80vh;
            overflow: hidden;
        }
        
        /* --- Image/Brand Side (UPDATED) --- */
        .image-side {
            width: 45%;
            /* Removed background image for a solid, professional color block */
            background-color: var(--secondary-color);
            color: var(--white);
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px; /* Increased padding */
            text-align: left;
        }
        .image-side .logo {
            font-size: 2.2rem; /* Slightly adjusted */
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 25px;
        }
        .image-side h1 {
            font-size: 2.5rem;
            line-height: 1.3;
            margin-bottom: 20px;
            color: var(--white); /* Ensure text is white */
        }
        .image-side p {
            font-size: 1.1rem;
            color: var(--border-color); /* Lighter gray/blue on dark bg */
            max-width: 400px;
            opacity: 0.9;
        }

        /* --- Form Side (UPDATED) --- */
        .form-side {
            width: 55%;
            padding: 50px 60px; /* Increased padding for more breathing room */
            overflow-y: auto;
        }
        .form-side h2 {
            color: var(--secondary-color);
            font-size: 2.2rem; /* Slightly larger */
            margin-bottom: 10px;
        }
        .form-side .subtitle {
            color: var(--text-light); /* Using refined subtitle color */
            margin-bottom: 35px; /* Increased spacing */
        }
        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px; /* Slightly more gap */
        }
        .form-group { position: relative; }
        .full-width { grid-column: 1 / -1; }
        .form-group label {
            display: block;
            color: var(--secondary-color);
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 0.9rem; /* Slightly smaller label */
        }
        .input-wrapper { position: relative; }
        .input-wrapper i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
            transition: color 0.3s;
        }
        .form-group input, .form-group select {
            width: 100%;
            padding: 14px 15px 14px 45px; /* Slightly taller inputs */
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 1rem;
            color: var(--text-dark);
            background-color: var(--white); /* Changed from light-gray to white */
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(255, 107, 74, 0.2);
            background-color: var(--white);
        }
        .form-group input:focus ~ i, .form-group select:focus ~ i {
            color: var(--primary-color);
        }
        /* Fix padding for select with icon */
        .form-group select {
            padding-left: 45px;
            appearance: none; /* Remove default arrow */
        }
        .input-wrapper::after { /* Custom arrow */
            content: '\f078';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
            pointer-events: none;
        }
        .form-group select:focus ~ .input-wrapper::after {
             color: var(--primary-color);
        }
        /* --- End Select Fix --- */

        /* File Upload (UPDATED) */
        .file-upload-wrapper {
            border: 2px dashed var(--border-color);
            border-radius: 8px;
            padding: 30px 20px;
            text-align: center;
            cursor: pointer;
            transition: border-color 0.3s, background-color 0.3s;
            background-color: var(--bg-light); /* Match body bg */
        }
        .file-upload-wrapper:hover {
            border-color: var(--primary-color);
            background-color: var(--white); /* Hover to white */
        }
        .file-upload-wrapper input[type="file"] { display: none; }
        .file-upload-wrapper i {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 10px;
        }
        #file-name {
            display: block;
            margin-top: 10px;
            color: var(--success);
            font-weight: 500;
            font-size: 0.9rem;
        }
        .password-wrapper .fa-eye, .password-wrapper .fa-eye-slash {
            cursor: pointer;
            right: 15px;
            left: auto;
        }

        /* Button (UPDATED) */
        .submit-btn {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 8px;
            /* Removed gradient for a solid, professional color */
            background-color: var(--primary-color);
            color: var(--white);
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s, box-shadow 0.3s; /* Updated transition */
            margin-top: 10px;
        }
        .submit-btn:hover {
            /* Removed translateY, changed to darker bg color */
            background-color: var(--primary-color-dark);
            box-shadow: 0 5px 15px rgba(255, 107, 74, 0.3);
        }
        .submit-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
            box-shadow: none;
        }
        .login-link {
            text-align: center;
            margin-top: 25px; /* More spacing */
            color: var(--text-light);
        }
        .login-link a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
        }
        /* Message/Alert Boxes */
        .message {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 0.95rem; /* Added font-size */
        }
        .message-success {
            color: #155724;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }
        .message-error {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }

        /* Responsive Styles */
        @media (max-width: 992px) {
            .container { flex-direction: column; min-height: auto; }
            .image-side {
                width: 100%;
                min-height: auto; /* Changed */
                text-align: center;
                padding: 40px; /* Adjusted padding */
            }
            .image-side p { max-width: 100%; }
            .form-side { width: 100%; }
        }
        @media (max-width: 768px) {
            .form-grid { grid-template-columns: 1fr; }
            .form-side { padding: 30px; }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="image-side">
            <div class="logo">SharingYatra</div>
            <h1>Partner with Us</h1>
            <p>Join our network of trusted travel agencies and reach thousands of customers daily. Manage your fleet, drivers, and bookings all in one place.</p>
        </div>

        <div class="form-side">
            <h2>Create Your Agency Account</h2>
            <p class="subtitle">Fill in your agency details to get started.</p>

            <div id="messageArea"></div>

            <form id="agency-signup-form" enctype="multipart/form-data">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="agency-name">Name of Agency</label>
                        <div class="input-wrapper">
                            <input type="text" id="agency-name" name="agencyName" placeholder="Happy Travels Pvt. Ltd." required>
                            <i class="fa-solid fa-briefcase"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="owner-name">Owner's Name</label>
                        <div class="input-wrapper">
                            <input type="text" id="owner-name" name="ownerName" placeholder="Full name of owner" required>
                            <i class="fa-solid fa-user-tie"></i>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="oprate-station">Operating Station</label>
                        <div class="input-wrapper">
                            
                            <input type="text" id="oprate-station" name="oprateStation" required placeholder="Select or type station" list="station-list">
                
                            <i class="fa-solid fa-map-marker-alt"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="agency-mobile">Agency Mobile</label>
                        <div class="input-wrapper">
                            <input type="tel" id="agency-mobile" name="agencyMobile" placeholder="10-digit mobile number" required>
                            <i class="fa-solid fa-phone"></i>
                        </div>
                    </div>
                    <div class="form-group full-width">
                        <label for="agency-email">Agency Email ID</label>
                        <div class="input-wrapper">
                            <input type="email" id="agency-email" name="agencyEmail" placeholder="you@example.com" required>
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="gst-number">GST Number</label>
                        <div class="input-wrapper">
                            <input type="text" id="gst-number" name="gstNumber" placeholder="Your agency's GSTIN" required>
                            <i class="fa-solid fa-file-invoice-dollar"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="pan-number">PAN Number</label>
                        <div class="input-wrapper">
                            <input type="text" id="pan-number" name="panNumber" placeholder="Business PAN" required>
                            <i class="fa-solid fa-address-card"></i>
                        </div>
                    </div>
                    <div class="form-group full-width">
                        <label for="agency-license">Agency License No.</label>
                        <div class="input-wrapper">
                            <input type="text" id="agency-license" name="agencyLicense" placeholder="Official license number" required>
                            <i class="fa-solid fa-id-card"></i>
                        </div>
                    </div>
                    <div class="form-group full-width">
                        <label>Upload Gumasta License</label>
                        <label for="certificate-upload" class="file-upload-wrapper">
                            <i class="fa-solid fa-cloud-arrow-up"></i>
                            <span>Click to browse or drag & drop</span>
                            <input type="file" id="certificate-upload" name="gumastaLicense" accept=".pdf,.jpg,.jpeg,.png">
                        </label>
                        <span id="file-name"></span>
                    </div>
                    <div class="form-group full-width">
                        <label for="password">Set Password</label>
                        <div class="input-wrapper password-wrapper">
                            <input type="password" id="password" name="password" placeholder="Minimum 8 characters" required>
                            <i class="fa-solid fa-lock"></i>
                            <i class="fa-solid fa-eye" id="togglePassword"></i>
                        </div>
                    </div>
                    <div class="form-group full-width">
                        <button type="submit" id="submitButton" class="submit-btn">Create Account</button>
                    </div>
                </div>
                <p class="login-link">Already a partner? <a href="/login">Log In</a></p>
                
                <datalist id="station-list"></datalist>
            </form>
        </div>
    </div>
<script>
    // --- Utility Functions for Validation ---
    const regex = {
        // Indian Mobile Number (10 digits starting with 6, 7, 8, or 9)
        // Does not allow +91 or 0 prefix to keep validation simple for a 10-digit field
        mobile: /^[6789]\d{9}$/, 
        // Indian GST Number (15-digit: 2-State Code, 10-PAN, 1-Entity No., 'Z', 1-Checksum)
        gst: /^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$/, 
        // Indian PAN Number (10-character: 5-Alpha, 4-Numeric, 1-Alpha)
        pan: /^[A-Z]{5}[0-9]{4}[A-Z]{1}$/,
    };

    function showMessage(message, type) {
        const messageArea = document.getElementById('messageArea');
        messageArea.innerHTML = `<div class="message message-${type}">${message}</div>`;
        // Clear message after 5 seconds
        setTimeout(() => {
            messageArea.innerHTML = '';
        }, 5000);
    }

    function validateForm(formData) {
        const agencyName = formData.get('agencyName').trim();
        const ownerName = formData.get('ownerName').trim();
        const agencyMobile = formData.get('agencyMobile').trim();
        const gstNumber = formData.get('gstNumber').trim().toUpperCase();
        const panNumber = formData.get('panNumber').trim().toUpperCase();
        const password = formData.get('password');
        const certificateUpload = document.getElementById('certificate-upload').files.length;
        
        // 1. Name Length Validation
        if (agencyName.length < 3) {
            showMessage("Agency Name must be at least 3 characters long.", "error");
            return false;
        }
        if (ownerName.length < 3) {
            showMessage("Owner's Name must be at least 3 characters long.", "error");
            return false;
        }

        // 2. Mobile Number Validation
        if (!regex.mobile.test(agencyMobile)) {
            showMessage("Agency Mobile must be a valid 10-digit Indian mobile number (starts with 6, 7, 8, or 9).", "error");
            return false;
        }

        // 3. GST Number Validation
        if (!regex.gst.test(gstNumber)) {
            showMessage("GST Number must be a valid 15-character format (e.g., 27ABCDE1234F1Z1). Please ensure all letters are capitalized.", "error");
            return false;
        }
        
        // 4. PAN Number Validation
        // Note: The GST regex implicitly checks the PAN portion embedded in it, but this is a dedicated check.
        if (!regex.pan.test(panNumber)) {
            showMessage("PAN Number must be a valid 10-character format (5 letters, 4 numbers, 1 letter). Please use all capital letters.", "error");
            return false;
        }
        
        // // Optional: Cross-check PAN in GST (A good practice)
        // const gstPanPart = gstNumber.substring(2, 12);
        // if (gstPanPart !== panNumber) {
        //     showMessage("The PAN Number entered does not match the PAN embedded within the GST Number.", "error");
        //     return false;
        // }

        // 5. Password Length Validation
        if (password.length < 8) {
            showMessage("Password must be at least 8 characters long.", "error");
            return false;
        }

        // 6. File Upload Check (Mandatory for Gumasta License)
        if (certificateUpload === 0) {
             showMessage("Please upload the Gumasta License.", "error");
             return false;
        }
        
        return true; // All validations passed
    }

    // --- Existing DOM Elements & Listeners ---
    const fileInput = document.getElementById('certificate-upload');
    const fileNameDisplay = document.getElementById('file-name');
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('password');
    const signupForm = document.getElementById('agency-signup-form');
    const messageArea = document.getElementById('messageArea');
    const submitButton = document.getElementById('submitButton');
    const stationList = document.getElementById('station-list');

    // File Upload Display
    fileInput.addEventListener('change', function() {
        fileNameDisplay.textContent = this.files.length > 0 ? `Selected: ${this.files[0].name}` : '';
    });

    // Password Toggle
    togglePassword.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        this.classList.toggle('fa-eye');
        this.classList.toggle('fa-eye-slash');
    });

    // Form Submission Handler
    signupForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);

        // Run validation before proceeding
        if (!validateForm(formData)) {
            return; // Stop submission if validation fails
        }
        
        submitButton.disabled = true;
        submitButton.textContent = 'Registering...';
        messageArea.innerHTML = '';
        
        try {
            // Note: The server-side endpoint /register-agency is assumed to exist.
            const response = await fetch('/register-agency', {
                method: 'POST',
                body: formData
            });
            const result = await response.json();
            
            if (response.ok) {
                showMessage(`✅ ${result.message}`, "success");
                signupForm.reset();
                fileNameDisplay.textContent = '';
                setTimeout(() => window.location.href = '/login', 2000);
            } else {
                showMessage(`❌ ${result.message}`, "error");
            }
        } catch (error) {
            console.error('Submission Error:', error);
            showMessage("An unexpected network error occurred. Please try again.", "error");
        } finally {
            submitButton.disabled = false;
            submitButton.textContent = 'Create Account';
        }
    });

    // --- Station Loading Code (Unchanged) ---
    async function loadStations() {
      try {
        const response = await fetch('/stationdata.json'); 
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        const fullStationData = await response.json();
        
        const uniqueStationNames = new Set();
        stationList.innerHTML = ''; 
        
        fullStationData.lines.forEach(line => {
          if (line.routes) {
            line.routes.forEach(route => {
              if (route.stations) {
                route.stations.forEach(station => {
                  uniqueStationNames.add(station.station_name);
                });
              }
            });
          }
        });
        
        uniqueStationNames.forEach(stationName => {
          const option = document.createElement('option');
          option.value = stationName;
          stationList.appendChild(option);
        });
        
      } catch (error) {
        console.error("Could not load station data:", error);
      }
    }

    document.addEventListener('DOMContentLoaded', loadStations);
</script>
</body>
</html>