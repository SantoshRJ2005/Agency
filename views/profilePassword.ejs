<!-- Password Reset Modal -->
<div id="password-modal-overlay" class="modal-overlay">
    <div class="modal-content">
        <h2><i class="fa-solid fa-lock"></i> Change Your Password</h2>
        
        <div id="password-message" style="display: none;"></div>

        <form id="password-reset-form">
            
            <div class="form-group">
                <label for="current-password">Current Password</label>
                <input type="password" id="current-password" required minlength="8">
                <i class="fa-solid fa-eye toggle-password" data-target="current-password"></i>
            </div>
            
            <div class="form-group">
                <label for="new-password">New Password</label>
                <input type="password" id="new-password" required minlength="8">
                <i class="fa-solid fa-eye toggle-password" data-target="new-password"></i>
            </div>
            
            <div class="form-group">
                <label for="confirm-password">Confirm New Password</label>
                <input type="password" id="confirm-password" required minlength="8">
                <i class="fa-solid fa-eye toggle-password" data-target="confirm-password"></i>
            </div>

            <div class="modal-actions">
                <button type="button" class="modal-btn btn-cancel" id="cancel-password-btn">Cancel</button>
                <button type="submit" class="modal-btn btn-save" id="save-password-btn">Save New Password</button>
            </div>
        </form>
    </div>
</div>

<script>
    // --- Mobile Sidebar Toggle Logic ---
    const menuToggle = document.getElementById('menu-toggle');
    const sidebarLinks = document.getElementById('sidebar-links');
    
    menuToggle.addEventListener('click', () => {
        sidebarLinks.classList.toggle('open');
    });

    // --- Modal Logic ---
    const changePasswordBtn = document.getElementById('change-password-btn');
    const passwordModalOverlay = document.getElementById('password-modal-overlay');
    const cancelPasswordBtn = document.getElementById('cancel-password-btn');
    const passwordResetForm = document.getElementById('password-reset-form');
    const passwordMessage = document.getElementById('password-message');
    const savePasswordBtn = document.getElementById('save-password-btn');
    
    function openModal() {
        passwordModalOverlay.classList.add('open');
    }

    function closeModal() {
        passwordModalOverlay.classList.remove('open');
        passwordResetForm.reset();
        hideMessage();
    }

    function showMessage(message, type) {
        passwordMessage.textContent = message;
        passwordMessage.className = `message message-${type}`;
        passwordMessage.style.display = 'block';
    }

    function hideMessage() {
        passwordMessage.style.display = 'none';
    }

    // Event listeners for modal control
    changePasswordBtn.addEventListener('click', openModal);
    cancelPasswordBtn.addEventListener('click', closeModal);
    passwordModalOverlay.addEventListener('click', (e) => {
        if (e.target === passwordModalOverlay) {
            closeModal();
        }
    });

    // --- Password Toggle Logic (for all three fields) ---
    document.querySelectorAll('.toggle-password').forEach(toggle => {
        toggle.addEventListener('click', function() {
            const targetId = this.getAttribute('data-target');
            const targetInput = document.getElementById(targetId);
            
            const isPassword = targetInput.getAttribute('type') === 'password';
            targetInput.setAttribute('type', isPassword ? 'text' : 'password');
            this.classList.toggle('fa-eye');
            this.classList.toggle('fa-eye-slash');
        });
    });

    // --- Form Submission & Validation Logic ---
    passwordResetForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        hideMessage();
        
        const currentPass = document.getElementById('current-password').value;
        const newPass = document.getElementById('new-password').value;
        const confirmPass = document.getElementById('confirm-password').value;

        // Simple Client-Side Validation
        if (newPass !== confirmPass) {
            showMessage("New password and confirm password do not match.", "error");
            return;
        }
        
        if (newPass.length < 8) {
            showMessage("New password must be at least 8 characters long.", "error");
            return;
        }

        // Disable button and show loading state
        savePasswordBtn.disabled = true;
        savePasswordBtn.textContent = 'Changing...';

        try {
            // Simulated API call (replace with actual fetch to your backend)
            // Example payload: { currentPassword: currentPass, newPassword: newPass }
            await new Promise(resolve => setTimeout(resolve, 1500)); 

            // Simulate successful response
            const success = true; 
            
            if (success) {
                showMessage("Password successfully updated!", "success");
                // Optional: Close modal after a short delay on success
                setTimeout(closeModal, 2000); 
            } else {
                // Simulate error response (e.g., current password incorrect)
                showMessage("Failed to update password. Current password may be incorrect.", "error");
            }

        } catch (error) {
            console.error("Password reset error:", error);
            showMessage("An unexpected network error occurred.", "error");
        } finally {
            savePasswordBtn.disabled = false;
            savePasswordBtn.textContent = 'Save New Password';
        }
    });
</script>
